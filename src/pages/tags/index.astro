---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allRecipes = Object.values(import.meta.glob('../recipes/*.md', { eager: true }));

const tags = [...new Set(allRecipes.map((post: any) => post.frontmatter.tags).flat())];

---

<BaseLayout pageTitle="Tags" pageDescription="Browse all tags">
    <div class="wrapper">
        <h1>Tags</h1>
        <div class="tags">
            {tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
            ))}
        </div>
    </div>
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>