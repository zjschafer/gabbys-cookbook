---
import '../styles/_normalize.css';
import '../styles/global.css';
import OpenGraph from './OpenGraph.astro';
interface Props {
  title: string;
  description: string;
  ogType: string;
}

const { title, description, ogType } = Astro.props;
---

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<meta name="description" content={description} />
<!-- OGP -->
<OpenGraph 
  title={title} 
  description={description} 
  image="/default-image.jpg" 
  url={Astro.request.url}
  ogType={ogType || 'website'}
/>
<!-- For additional meta tags -->
<slot name="meta" /> 
	
<!-- fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Libre+Bodoni:ital,wght@0,400..700;1,400..700&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Playfair:ital,opsz,wght@0,5..1200,300..900;1,5..1200,300..900&family=Literata:ital,opsz,wght@0,7..72,200..900;1,7..72,200..900&family=PT+Mono&display=swap"rel="stylesheet"/>
<!-- Astro Generator -->
<meta name="generator" content={Astro.generator} />