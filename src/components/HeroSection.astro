---
import RecipeSearchFilterBar from './RecipeSearchFilterBar.astro'

const { title, subtitle, text} = Astro.props;

const imageUrl = `url("${Astro.props.imageUrl}")`;
const imageMobileUrl = `url("${Astro.props.imageMobileUrl}")`;

interface Props {
    title: string;
    subtitle: string;
    text: string;
    imageUrl?: string;
    imageMobileUrl?: string;
}
---

<section id="hero">
    <div class="wrapper">
        <div class="wrapper inner">
            <p class="subtitle">{subtitle || 'Gluten Free recipes'}</p>
            <h1>
            {title || 'Gluten free food that just tastes better.'}
            </h1>
            <p class="lead">
            {text || 'Guided by a simple philosophyâ€”No gluten & no ads.'}
            </p>
        </div>
        <RecipeSearchFilterBar />
    </div>
</section>

<style define:vars={{imageUrl, imageMobileUrl}}>
    #hero {
        /* for background image opacity */
        /* position: relative; */
        /* width: 100%; */
        /* height: 320px;  */
        /* Set a specific height to make the background visible */
        background-image: var(--imageUrl);
        padding: 40px 0;
        background-position: center center;
        background-size: cover;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-repeat: no-repeat;
    }

    /* #hero::before {
        content: "";
