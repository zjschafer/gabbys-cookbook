<nav>
    <div class="wrapper">
        <div>
            <a href="/"
            ><img id="logo" src="/../assets/logo.svg" alt="Gabby's Cookbook Logo"
            /><img id="logo-mobile" src="/../assets/logo-mobile.svg" alt="Gabby's Cookbook Logo"/></a>
        </div>
        <div class="nav-links">
            <a href="/recipes">Recipes</a>
